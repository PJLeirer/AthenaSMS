<Window x:Class="AthenaConsole.LoginWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Athena" Height="222.876" Width="270.018" ResizeMode="NoResize">
    <Grid Name="gridLogin" Background="AliceBlue" FocusManager.FocusedElement="{Binding ElementName=tbUserName}">
        <Label Content="Athena Console Login" HorizontalAlignment="Left" Margin="47,3,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="92,36,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="95,81,0,0" VerticalAlignment="Top"/>
        <TextBox Name="tbUserName" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Height="23" Margin="70,58,74,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox Name="pbUserPass" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Height="23" Margin="70,105,74,0" VerticalAlignment="Top" Width="120"/>
        <Button Name="bLoginBtn" IsDefault="True" Click="loginButton"  Content="Login" HorizontalAlignment="Left" Margin="91,137,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Name="lLoginErrorMessage" TextElement.Foreground="Red" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="10,144,10,43" VerticalAlignment="Center" Width="237" Height="24" FontSize="11"/>

    </Grid>
</Window>
