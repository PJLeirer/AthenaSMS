        <Label Content="Options" HorizontalAlignment="Left" Margin="102,5,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Host Address or Name" HorizontalAlignment="Left" Margin="68,55,0,0" VerticalAlignment="Top"/>
        <TextBox Name="tbAddress" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Height="23" Margin="55,81,57,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160"/>
        <Label Name="lErrorMsg" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Foreground="Red" Margin="10,151,21,0" VerticalAlignment="Top" Width="241" Height="28"/>
